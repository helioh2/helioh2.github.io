#lang racket

;; Arquivo para definição das constantes do programa.


(require 2htdp/image)
;inclua outros pacotes ou arquivos necessários usando (require ...)

(provide (all-defined-out)) ;permite que outros arquivos importem deste

;; =================
;; Constantes:

(define ALTURA 800)
(define COMP 600)
(define LIMITE-DIR 530 )
(define LIMITE-ESQ 70 )
(define CENARIO (empty-scene COMP ALTURA))
(define CARRO (scale 0.5 (bitmap "carrinho.png")))
(define METADE-CARRO (/ (image-width CARRO) 2))
(define POS-Y-CARRO (/ ALTURA 1.2))

(define LIMITE-BAIXO ALTURA)
(define LIMITE-CIMA 0)
(define CARRO-I (scale 0.5 (bitmap "policia.png")))
(define METADE-CARRO-I (/ (image-width CARRO-I) 2))
(define POS-X-CI 150)
(define POS-Y-CI 6)

(define POS-X-CI2 300)
(define POS-Y-CI2 6)

(define POS-X-CI3 450)
(define POS-Y-CI3 6)

(define TEXTO-GAME-OVER (text "GAME OVER" 80 "red"))
(define IMG-GAME-OVER 
  (place-image TEXTO-GAME-OVER (/ COMP 2) (/ ALTURA 2) CENARIO))
(define PONTOS-GANHOS 5)
(define ARVORE (bitmap "arvore.jpg"))
(define VIDA 3 )
(define FAIXA (bitmap "faixa.jpg"))

(define POS-X-F1 50) 
(define POS-Y-F1 10) 
(define POS-X-F2 550) 
(define POS-Y-F2 10)


(define POS-X-A1 25) 
(define POS-Y-A1 10) 
(define POS-X-A2 575) 
(define POS-Y-A2 10)


(define AUMENTO-VELOCIDADE 1)   ;AUMENTA A VELOCIDADES DE TODOS ELEMENTOS MENOS O CARRO